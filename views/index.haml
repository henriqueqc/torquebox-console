!!!
%html
  %head
    %script{  :type  => "text/javascript" }
      = "var endpoint = '#{endpoint}';"
      = "var torquebox3 = #{torquebox_3? ? 'true' : 'false'};"
    %script{  :type  => "text/javascript", 
              :src   => "https://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js" }
    - if torquebox_3?
      %script{  :type  => "text/javascript", 
                :src   => "http://#{endpoint}/stomp.js" }
    - else
      %script{  :type  => "text/javascript", 
                :src   => "stilts-stomp.js" }    
    %script{  :type  => "text/javascript", 
              :src   => "ansispan.js" }
    %script{  :type  => "text/javascript", 
              :src   => "console.js" }
    %link{    :rel   => "stylesheet",
              :href  => "console.css",
              :type  => "text/css",
              :media => "screen" }
  %body.light
    #controls
      %span.button Light/Dark
      %h1 TorqueBox::Console
    %form#input-form
      #console
        %pre
          %code
            .content
        .prompt
        %input{:type=>:text, :value=>""}
      #welcome{:style=>"text-align: right"}
        Type any ruby statement or pry command.
